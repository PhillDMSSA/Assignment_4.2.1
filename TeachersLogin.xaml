<Window x:Class="Assignment_4._2._1.TeachersLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_4._2._1"
        mc:Ignorable="d"
        Title="Teacher Login" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UsernameTextBox" VerticalAlignment="Top" Margin="10" Height="25" Width="200" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
        <PasswordBox x:Name="PasswordBox" VerticalAlignment="Top" Margin="10,40,10,0" Height="25" />
        <Button Content="Login" VerticalAlignment="Top" Margin="10,80,10,0" Height="30" Click="LoginButton_Click" />
    </Grid>
</Window>
